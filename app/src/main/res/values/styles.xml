<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/googlesans_bold</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:font" tools:targetApi="o">@font/googlesans_bold</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSubTitle" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/googlesans_regular</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>