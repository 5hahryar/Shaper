<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    
    <style name="TextH5" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:font" tools:targetApi="o">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="TextOverLine">
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
    <item name="android:background">@drawable/date_chip_background</item>
</style>

    <style name="toggleButton" parent="Widget.Button.Toggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dayChipHeight</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@color/date_chip_text_color</item>
        <item name="android:textAppearance">@style/TextOverLine</item>
        <item name="background">@drawable/date_chip_background</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">@style/TextH5</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
    </style>

    <style name="AddTaskBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>