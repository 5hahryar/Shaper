<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/googlesans_bold</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:font" tools:targetApi="o">@font/googlesans_bold</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSubTitle" parent="TextAppearance.AppCompat">
        <item name="android:font" tools:targetApi="o">@font/googlesans_regular</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextSmall">
        <item name="android:font" tools:targetApi="o">@font/googlesans_regular</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/date_chip_background</item>
    </style>

    <style name="toggleButton" parent="Widget.Button.Toggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dayChipHeight</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@color/date_chip_text_color</item>
        <item name="android:textAppearance">@style/TextSmall</item>
        <item name="background">@drawable/date_chip_background</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>


</resources>