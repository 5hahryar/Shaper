<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.sloupycom.shaper.viewModel.SettingsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bottom_sheet_background" android:paddingBottom="@dimen/margin_end">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_indicator"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                 />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.name}"
                android:textAppearance="@style/TextH5" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.email}"
                android:textAppearance="@style/TextBody1"
                android:textColor="@color/colorPrimaryDarkAlpha" />

        </LinearLayout>

        <View
            android:id="@+id/devider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/userLayout"
            android:layout_marginTop="20dp"
            android:background="@color/colorSeperator" />

        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/devider_1"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_start"
            android:paddingEnd="@dimen/margin_end"
            android:layout_marginTop="@dimen/margin_start"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextH5"
                    android:layout_alignParentStart="true"
                    android:textSize="20sp"
                    android:text="@string/night_mode"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/textView_nightMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextH5"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:text="@{viewModel.nightMode}"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:onClick="@{(view) -> viewModel.onClick(view)}"
                    android:textColor="@color/colorPrimaryDarkAlpha"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextH5"
                    android:layout_alignParentStart="true"
                    android:textSize="20sp"
                    android:text="@string/reminder"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="10:00 AM"
                    android:textAppearance="@style/TextH5"
                    android:textColor="@color/colorPrimaryDarkAlpha"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/devider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/settingsLayout"
            android:layout_marginTop="@dimen/margin_start"
            android:background="@color/colorSeperator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/devider_2"
            android:layout_marginTop="@dimen/margin_start"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/supportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_help_outline_24px"
                    app:tint="@color/colorPrimaryDarkAlpha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/support"
                    android:textAppearance="@style/TextButton"
                    android:textColor="@color/colorPrimaryDarkAlpha"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{(view) -> viewModel.onClick(view)}"
                android:gravity="center"
                android:background="@drawable/ripple_effect"
                android:layout_toEndOf="@id/supportButton"
                android:layout_marginStart="100dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_login_24px"
                    app:tint="@color/colorPrimaryDarkAlpha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:textAppearance="@style/TextButton"
                    android:textColor="@color/colorPrimaryDarkAlpha"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>